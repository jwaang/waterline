{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "convex/*": ["../node_modules/convex/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules"]
}
